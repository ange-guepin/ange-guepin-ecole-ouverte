{
  "name": "11ty-tailwind",
  "version": "1.0.0",
  "type": "module",
  "description": "11ty starter template with Tailwind CSS support.",
  "keywords": [
    "11ty",
    "tailwind",
    "eleventy"
  ],
  "author": "Nikita Zanella",
  "license": "ISC",
  "scripts": {
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./src/css/style.css --watch",
    "watch:eleventy": "eleventy --serve",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./src/css/style.css --minify",
    "build:eleventy": "eleventy",
    "start": "npm-run-all build:css --parallel watch:*",
    "build": "npm-run-all build:css build:eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@picocss/pico": "^2.1.1",
    "luxon": "^3.7.2",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  }
}
